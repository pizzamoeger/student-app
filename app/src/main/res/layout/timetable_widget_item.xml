<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/date_widget_timetable"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:visibility="invisible"
        android:text="12.03.2005"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:id="@+id/widget_timetable_item"
        android:background="@color/purple"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time_widget_timetable_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="15dp"
            android:textColor="@color/gray_1"
            android:layout_height="match_parent"
            android:text="10:00" />

        <TextView
            android:id="@+id/name_widget_timetable_item"
            android:layout_width="0dp"
            android:textColor="@color/gray_1"
            android:textSize="15dp"
            android:layout_weight="2"
            android:padding="15dp"
            android:layout_height="match_parent"
            android:text="event name" />
    </LinearLayout>


</LinearLayout>
